<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.etuloser.padma.rohit.homework5.GameDetailsActivity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutgameview"
        android:visibility="invisible"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txttitle"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="title"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    <ImageView
        android:layout_width="364dp"
        android:layout_height="140dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/gameimageview" />

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbloverview"
        android:textSize="20dp"
        android:textColor="#000000"
        />

    <ScrollView
        android:layout_width="374dp"
        android:layout_height="148dp"
        android:background="@drawable/box"

        android:layout_marginRight="10dp"
        android:layout_weight="0.55">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/Overviewlayout"
            />
    </ScrollView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Genre:sports"
    android:textColor="#000000"
    android:textSize="20dp"
    android:id="@+id/txtgenre"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher:EA sports"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/txtpublisher"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:textColor="@color/colorwhite"
        android:text="@string/btnplaytrailer"
        android:onClick="PlayTrailerClick"
        android:id="@+id/btnplay"
        android:layout_gravity="center"
        android:background="@color/customcolor"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/colorwhite"
        android:text="@string/btnsimilargames"
        android:onClick="SimilarGamesClick"
        android:layout_gravity="center"
        android:background="@color/customcolor"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/colorwhite"
        android:text="@string/btnfinish"
        android:onClick="FinishClick"
        android:layout_gravity="center"
        android:background="@color/customcolor"
        android:layout_marginTop="10dp"
        />

    </LinearLayout>

</LinearLayout>
