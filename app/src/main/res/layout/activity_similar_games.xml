<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_similar_games"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"

    android:orientation="vertical"
    tools:context="com.etuloser.padma.rohit.homework5.SimilarGamesActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutfinal"
    android:visibility="invisible"
    >

    <TextView
        android:text="Sgamestitle"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"

        android:id="@+id/Sgamestitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
android:layout_marginTop="10dp"
        android:background="@drawable/box"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/similargameslayout"
            />
    </ScrollView>

    <Button
        android:text="@string/btnfinish"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@color/colorwhite"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"

        android:id="@+id/sgfinish"
        android:background="@color/customcolor"
        android:onClick="sgFinishClick"
        />


</LinearLayout>

</LinearLayout>
